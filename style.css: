body {
    background-color: #ADD8E6; /* Основной голубой цвет */
    color: #333;               /* Темно-серый цвет текста */
}

a {
    color: #0000EE;            /* Синий цвет ссылок */
    text-decoration: none;     /* Убираем подчеркивание ссылок */
}

a:hover {
    color: #6A5ACD;            /* Цвет ссылок при наведении мыши */
}

button,
input[type="submit"] {
    background-color: #87CEEB; /* Светло-голубой цвет кнопок */
    border-radius: 5px;        /* Скругленные углы */
    padding: 10px 20px;        /* Внутренние отступы */
    cursor: pointer;           /* Изменение курсора на руку */
}

button:hover,
input[type="submit"]:hover {
    background-color: #00BFFF; /* Насыщенный синий цвет при наведении */
}
